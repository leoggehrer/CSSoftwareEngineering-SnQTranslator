@*@CodeCopy*@
@*#if ACCOUNT_ON*@
@{
    @using Microsoft.AspNetCore.Mvc.Rendering
    @using SnQTranslator.AspMvc.Modules.Session
    @using SnQTranslator.AspMvc.Modules.Language
    @model SnQTranslator.AspMvc.Models.Business.Account.IdentityUser

    var sessionWrapper = new SessionWrapper(Context.Session);
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
    Func<string, string> translate = Translator.TranslateIt;
    Func<string, string> translateFor = pn => translate($"{controller}.{pn}");

    <div class="row">
        <input asp-for="AnotherModel.Id" type="hidden" />
        <input asp-for="AnotherModel.RowVersion" type="hidden" />
        <input asp-for="AnotherModel.IdentityId" type="hidden" />
        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@translateFor(nameof(Model.AnotherModel.Firstname))</label>
                <input asp-for="AnotherModel.Firstname" class="form-control" />
                <span asp-validation-for="AnotherModel.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@translateFor(nameof(Model.AnotherModel.Lastname))</label>
                <input asp-for="AnotherModel.Lastname" class="form-control" />
                <span asp-validation-for="AnotherModel.Lastname" class="text-danger"></span>
            </div>
        </div>
    </div>
}
@*#endif*@
