@*@CodeCopy*@
@{
    @model SnQTranslator.AspMvc.Models.IdentityModel

    var viewBagWrapper = Model.ViewBagInfo;
    var property = viewBagWrapper.DisplayProperty;
    var displayViewModel = viewBagWrapper.CreateDisplayViewModel(Model);

    <dl class="row">
        <dt class="col-sm-2">
            @viewBagWrapper.TranslateFor(displayViewModel.GetLabel(property))
        </dt>
        <dd class="col-sm-10">
            @await Html.PartialAsync("_DisplayControl", Model)
        </dd>
    </dl>
    Model.ViewBagInfo.Handled = true;
}
