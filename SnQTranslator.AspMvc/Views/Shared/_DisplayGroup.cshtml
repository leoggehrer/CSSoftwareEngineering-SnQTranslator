@*@CodeCopy*@
@{
    @using SnQTranslator.AspMvc.Models.Modules.View
    @using SnQTranslator.AspMvc.Modules.View
    @model DisplayViewModel

    var viewBagInfo = Model.ViewBagInfo;
    var property = viewBagInfo.DisplayProperty;

    <dl class="row">
        <dt class="col-sm-2">
            @viewBagInfo.TranslateFor(Model.GetLabel(property))
        </dt>
        <dd class="col-sm-10">
            @await Html.PartialAsync("_DisplayControl", Model)
        </dd>
    </dl>
    Model.ViewBagInfo.Handled = true;
}
