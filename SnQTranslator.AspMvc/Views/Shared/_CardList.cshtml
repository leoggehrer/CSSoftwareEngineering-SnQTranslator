         && viewBagInfo.Action.Equals(ActionMode.Delete.ToString()) == false)
    {
        <div class="card-body">
            @await Html.PartialAsync("_CommandControl", model)
        </div>
    }
    else
    {
        @await Html.PartialAsync("_CardBody", model)
    }
*@@*#endif*@
            </div>
        }
    }
}
